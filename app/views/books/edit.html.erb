<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>


<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path(@books) %>